<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.control.Label?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.insa.lifraison.view.MenuController" styleClass="menu" alignment="CENTER" spacing="20">
    <Label text="Menu" styleClass="title" />
    <GridPane hgap="10" vgap="10" fx:id="buttons">
        <Button text="Load Map" fx:id="loadMapButton" onAction="#loadMap" styleClass="menuButton" GridPane.rowIndex="0" GridPane.columnIndex="0" maxWidth="Infinity" />
        <Button text="Load Deliveries" fx:id="loadDeliveriesButton" onAction="#loadDeliveries" styleClass="menuButton" GridPane.rowIndex="0" GridPane.columnIndex="1" maxWidth="Infinity" />
        <Button text="Add Delivery" fx:id="addDeliveryButton" onAction="#addDelivery" styleClass="menuButton" GridPane.rowIndex="1" GridPane.columnIndex="0" maxWidth="Infinity" />
        <Button text="Remove Delivery" fx:id="removeDeliveryButton" onAction="#removeDelivery" styleClass="menuButton" GridPane.rowIndex="1" GridPane.columnIndex="1" maxWidth="Infinity" />
        <Button text="Undo" fx:id="undoButton" onAction="#undo" styleClass="menuButton" GridPane.rowIndex="2" GridPane.columnIndex="0" maxWidth="Infinity" />
        <Button text="Redo" fx:id="redoButton" onAction="#redo" styleClass="menuButton" GridPane.rowIndex="2" GridPane.columnIndex="1" maxWidth="Infinity" />
        <Button text="Add Tour" fx:id="addTourButton" onAction="#addTour" styleClass="menuButton" GridPane.rowIndex="3" GridPane.columnIndex="0" />
        <Button text="Remove Tour" fx:id="removeTourButton" onAction="#removeTour" styleClass="menuButton" GridPane.rowIndex="3" GridPane.columnIndex="1" />
        <Button text="Compute Plan" fx:id="computePlanButton" onAction="#computePlan" styleClass="menuButton" GridPane.rowIndex="4" GridPane.columnIndex="0" maxWidth="Infinity" />
        <Button text="Save Deliveries" fx:id="saveDeliveriesButton" onAction="#saveDeliveries" styleClass="menuButton" GridPane.rowIndex="4" GridPane.columnIndex="1" maxWidth="Infinity" />
        <Button text="Export Roadmap" fx:id="saveRoadmapButton" onAction="#saveRoadmap" styleClass="menuButton" GridPane.rowIndex="5" GridPane.columnIndex="0" maxWidth="Infinity" />

        <columnConstraints>
            <ColumnConstraints percentWidth="50" />
            <ColumnConstraints percentWidth="50" />
        </columnConstraints>
    </GridPane>
</VBox>
