<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.ColumnConstraints?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.insa.lifraison.view.MenuController" styleClass="menu">
    <GridPane hgap="10" vgap="10">
        <Button text="Load Map" onAction="#loadMap" styleClass="menuButton" GridPane.rowIndex="0" GridPane.columnIndex="0" maxWidth="Infinity" />
        <Button text="Load Deliveries" onAction="#loadDeliveries" styleClass="menuButton" GridPane.rowIndex="0" GridPane.columnIndex="1" maxWidth="Infinity" />
        <Button text="Add Delivery" onAction="#addDelivery" styleClass="menuButton" GridPane.rowIndex="1" GridPane.columnIndex="0" maxWidth="Infinity" />
        <Button text="Delete Delivery" onAction="#deleteDelivery" styleClass="menuButton" GridPane.rowIndex="1" GridPane.columnIndex="1" maxWidth="Infinity" />
        <Button text="Undo" fx:id="undoButton" onAction="#undo" styleClass="menuButton" GridPane.rowIndex="2" GridPane.columnIndex="0" maxWidth="Infinity" />
        <Button text="Redo" onAction="#redo" styleClass="menuButton" GridPane.rowIndex="2" GridPane.columnIndex="1" maxWidth="Infinity" />
        <Button text="Add Tour" onAction="#addTour" styleClass="menuButton" GridPane.rowIndex="3" GridPane.columnIndex="0" />
        <Button text="Remove Tour" onAction="#removeTour" styleClass="menuButton" GridPane.rowIndex="3" GridPane.columnIndex="1" />
        <Button text="Compute Plan" onAction="#computePlan" styleClass="menuButton" GridPane.rowIndex="4" GridPane.columnIndex="0" maxWidth="Infinity" />
        <Button text="Save" onAction="#saveDeliveries" styleClass="menuButton" GridPane.rowIndex="4" GridPane.columnIndex="1" maxWidth="Infinity" />

        <columnConstraints>
            <ColumnConstraints percentWidth="50" />
            <ColumnConstraints percentWidth="50" />
        </columnConstraints>
    </GridPane>

    <VBox fx:id="courierList">

    </VBox>
</VBox>
